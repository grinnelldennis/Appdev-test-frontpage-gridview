<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/cardPubImage"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:fadingEdge="horizontal"
        android:background="@drawable/pub_card_border"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:layout_height="110dp" />

    <TextView
        android:text="TextView"
        android:layout_height="30dp"
        android:layout_below="@+id/cardPubImage"
        android:layout_alignLeft="@+id/cardPubImage"
        android:layout_alignStart="@+id/cardPubImage"
        android:id="@+id/cardPubName"
        android:paddingTop="7dp"
        android:layout_width="100dp"
        android:paddingLeft="7dp"
        android:elevation="0dp"
        android:background="@drawable/pub_card_border" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/cardPubName"
        android:layout_alignStart="@+id/cardPubName"
        android:id="@+id/textView"
        android:layout_alignRight="@+id/cardPubName"
        android:layout_alignEnd="@+id/cardPubName"
        android:layout_below="@+id/cardPubName"
        android:background="@drawable/pub_card_border"
        android:layout_height="1.1dp" />

    <ImageView
        app:srcCompat="@android:drawable/star_off"
        android:id="@+id/cardPubFavorite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/cardPubName"
        android:layout_alignEnd="@+id/cardPubName"
        android:layout_below="@+id/cardPubImage"
        android:paddingRight="8dp" />

</RelativeLayout>